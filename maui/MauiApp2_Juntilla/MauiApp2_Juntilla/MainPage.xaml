<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp2_Juntilla.MainPage">

    <HorizontalStackLayout
        Spacing="10">
        <VerticalStackLayout>
            <ImageButton
                x:Name="imgBtn"
                Source="man.jpg"
                SemanticProperties.Description="A man"
                HeightRequest="200"
                WidthRequest="200"
                Clicked="ChangeOnClick"/>
            <Label
                x:Name="lbl"
                Text="Expectation"
                HorizontalOptions="Center"/>
        </VerticalStackLayout>
        
    </HorizontalStackLayout>
</ContentPage>
